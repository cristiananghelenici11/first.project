@using Microsoft.AspNetCore.Identity
@using UniversityRating.Data.Core.DomainModels.Identity
@using UniversityRating.Presentation.Enums
@using UniversityRating.Presentation.Models.Teacher
@using UniversityRating.Presentation.Models.University
@model UniversityRating.Presentation.Models.Home.IndexViewModel
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Universities";
    Layout = "/Views/Shared/_LayoutDashboard.cshtml";

}

<div class="main-panel">

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="header">
                            <h4 class="title">List of University</h4>
                            <p class="category">Sort By</p>
                            <div class="row">

                                <div class="col-md-10">
                                    <select name="Universities" class="form-control" id="sortColumn" style="width: 150px" asp-items="Html.GetEnumSelectList<UniversitiesSortColumn>()">
                                        <option selected="selected" value="">Please select</option>
                                    </select>
                                </div>

                                <div class="col-md-2 ">
                                    <input class="form-control" style="width: 150px" type="text" placeholder="search"  id="search"/>
                                </div>
                            </div>



                        </div>

                        <div class="content table-responsive table-full-width" id="teachers">

                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Average Mark</th>
                                        <th>Age</th>
                                        <th>Contact</th>
                                    </tr>
                                </thead>
                                <tbody id="resultsTable">
                                   @await Html.PartialAsync("_UniversityTableRecords", Model.UniversityShowViewModels)
                                </tbody>
                            </table>
                        </div>

                        <div>
                            <a class="btn btn-success" id="moreUniversities" style="margin-bottom: 10px" data-page-number="1">
                                <i class="fa fa-plus"></i> Show More Universities
                            </a>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
    $(document).ready(function () {
        $("#search").bind("change", function () {

            $.ajax({
                url: "/University/UniversitySearch",
                type: "GET",
                data: ({ search: $('#search').val()}),
                success: function (data) {

                    $("#resultsTable").empty();

                    $.each(data,
                        function (i, item) {
                            $('#resultsTable').append
                            (
                                "<tr>" +
                                "<td>" +
                                item.Id +
                                "</td>" +
                                "<td>" +
                                item.Name +
                                "</td>" +
                                "<td>" +
                                item.Description +
                                "</td>" +
                                "<td>" +
                                item.AverageMark +
                                "</td>" +
                                "<td>" +
                                item.Age +
                                "</td>" +
                                "<td>" +
                                item.Contact +
                                "</td>" +

                                "</tr>"
                            );
                        });
                }
            });
        });
    });
    </script>

    <script>
        $(function () {
            var getUniversities = function() { 
                var url = '@Url.Action("UniversitySort")' +
                    '?universitiesSortColumn=' +
                    $("#sortColumn").val() +
                    '&sortType=Asc' +
                    '&pageNumber=' +
                    $("#moreUniversities").attr('data-page-number');

                $.get(url,
                    function(response) {
                        $("#resultsTable").html($(response));
                    });
            };

            $("#moreUniversities").click(function () {
                var pageNumber = parseInt($(this).attr('data-page-number')) + 1;

                $(this).attr('data-page-number', pageNumber);

                var url = '@Url.Action("UniversitySort")' +
                    '?universitiesSortColumn=' +
                    $("#sortColumn").val() +
                    '&sortType=Asc' +
                    '&pageNumber=' +
                    $("#moreUniversities").attr('data-page-number');

                $.get(url,
                    function(response) {
                        $("#resultsTable").append($(response));
                    });
            });

            $("#sortColumn").change(function() {
                var url = '@Url.Action("UniversitySort")' +
                    '?universitiesSortColumn=' +
                    $("#sortColumn").val() +
                    '&sortType=Asc' +
                    '&pageNumber=' +
                    $("#moreUniversities").attr('data-page-number') + 
                    '&skipRecords=' + false;

                $.get(url,
                    function(response) {
                        $("#resultsTable").html($(response));
                    });
            });
        });
    </script>

}