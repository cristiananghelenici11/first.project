@model UniversityRating.Services.Common.DTOs.Comment.CommentUniversityShowDto
@{
    ViewData["Title"] = "AddOrEdit";
}


@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Comment", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.LabelFor(model => model.UserId, new { @class = "control-label" })
        @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.UserId)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.UniversityId, new { @class = "control-label" })
        @Html.EditorFor(model => model.UniversityId, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.UniversityId)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Subject, new { @class = "control-label" })
        @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Message, new { @class = "control-label" })
        @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
    </div>


    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}