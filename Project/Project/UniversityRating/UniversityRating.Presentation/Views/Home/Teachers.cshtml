                            <table class="table table-hover table-striped">
                                <thead>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Averange Mark</th>
                                <th>Email</th>
                                <th>Type Teacher</th>
                                <th>University</th>
                                </thead>
                                <tbody>
                                    @foreach (var teacher in Model.TeacherShows)
                                    {
                                        <tr>
                                            <td>@($"{teacher.Id}")</td>
                                            <td>@($"{teacher.FirstName} {teacher.LastName}")</td>
                                            <td>@($"{teacher.AverageMarks}")</td>
                                            <td>@($"{teacher.Email}")</td>
                                            <td>@($"{teacher.TypeTeacher}")</td>
                                            <td>
                                                @foreach (var university in teacher.Universities)
                                                {
                                                    @($"{university} ")
                                                }
                                            </td>
                                        </tr>

                                    }

                                </tbody>
                            </table>
                            @if (Model.PageViewModel.HasPreviousPage)
                            {
                                <a asp-action="Index"
                                   asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
                                   class="btn btn-default btn">
                                    <i class="glyphicon glyphicon-chevron-left"></i>
                                    Preview
                                </a>
                            }
                            @if (Model.PageViewModel.HasNextPage)
                            {
                                <a asp-action="Index"
                                   asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
                                   class="btn btn-default btn">
                                    <i class="glyphicon glyphicon-chevron-right"></i>
                                    Next
                                </a>
                            }

                        </div>
                        <div>
                            <button id="moreTeachers">button</button>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


<script>
    var pageNumber = 0;
    $("#moreTeachers").click(function () {
        pageNumber++;
        $.ajax({
            url: "/Home/Teachers",
            type: "GET",
            data: ({ page: pageNumber }),
            datatype: "application/json",
            success: function (data) {

                $("#moreTeachers").empty();

                if (data.length < 10) {
                    $("#moreTeachers").hide();
                }

                $.each(data,
                    function (item) {
                        $('#teachers').append
                        (
                            "<td>" +
                            item.Id +
                            "</td>" +
                            "<td>" +
                            item.FirstName +
                            item.LastName +
                            "</td>" +
                            "<td>" +
                            item.AverageMarks +
                            "</td>" +
                            "<td>" +
                            item.Email +
                            "</td>" +
                            "<td>" +
                            item.TypeTeacher +
                            "</td>"
                        );
                    });
            }
        });
    });

</script>
