@using UniversityRating.Presentation.Models.Teacher
@using UniversityRating.Presentation.Models.University
@model UniversityRating.Presentation.Models.Home.IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}


<div class="landing">
    <div class="home-wrap">
        <div class="home-inner">

        </div>
    </div>
</div>

<div class="caption text-center">
    <h1>Welcome to University Rating</h1>
    <h3>Choose the Best University</h3>
    <a class="btn btn-outline-light  btn-lg" asp-controller="Home" asp-action="Universities"> Get Start </a>
</div>

<div id="course" class="offset">
    <div class="col-12 narrow text-center">
        <h1> Theme Advanced Bootstrap Course</h1>
        <p class="lead">
            Learn Bootstrap by creating an advanced Bootstrap 4
            Responsive website Template from scratch, witch no steps skiped!
        </p>
        <a class="btn btn-secondary btn-md" href="http://bit.ly/advanced-bootstrap-course"
           target="_blank">Bootstrap Course</a>


    </div>
</div>

<div id="features" class=offset>

    <div class="jumbotron">
        <div class="narrow text-center">
            <div class="col-12">
                <h3 class="heading">Features</h3>
                <div class="heading-underline"></div>
            </div>

            <div class="row text-center">

                <div class="col-md-4">
                    <div class="feature">
                        <i class="fas fa-play-circle fa-4x" data-fa-transform="
							shrink-3 up-5"></i>
                        <h3>Custom animation</h3>
                        <p>
                            Animate.css and Waypoints.js allow for smooth animations
                            scrolling down the site.
                        </p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="feature">
                        <i class="fas fa-sliders-h fa-4x" data-fa-transform="
							shrink-4.5 up-4.5"></i>
                        <h3>Content Slider</h3>
                        <p>
                            Make navigation content sliders seampless with it's
                            content carousel navigation
                        </p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="feature">
                        <i class="fab fa-wpforms fa-4x" data-fa-transform="
							shrink-4 up-5"></i>
                        <h3>Contact Form</h3>
                        <p>
                            The bootstrap HTML form wil send directly to your email
                            address using tehnology
                        </p>
                    </div>
                </div>

            </div>


        </div>
    </div>


</div>

<div id="resources" class=offset>
    <div class="fixed-background">
        <div class="row dark text-center">

            <div class="col-12">
                <h3 class="heading">Top Universities</h3>
                <div class="heading-underline"></div>
            </div>
            @foreach (TopUniversityViewModel university in Model.TopUniversities)
            {
                <div class="col-md-4">
                    <h3>@($"{university.Name} ")</h3>
                    <div class="feature">
                        <i class="fas fa-bold fa-3x"></i>
                    </div>
                    <p class="lead">@($"{university.Description} ")</p>
                    <p class="lead">@($"Averange Mark : {university.AvgMark}")</p>
                </div>
            }


        </div>

        <div class="fixed-wrap">
            <div class="fixed">

            </div>
        </div>

    </div>

</div>

<div id="clients" class=offset>

    <div class="jumbotron">

        <div class="col-12">
            <h3 class="heading text-center">Top of Teachers</h3>
            <div class="heading-underline"></div>
        </div>

        <div class="row">
            @foreach (TopTeacherViewModel teacher in Model.TopTeachers)
            {
                <div class="col-md-6 clients">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="img/client1.png">
                        </div>
                        <div class="col-md-8">
                            <blockquote>
                                <i class="fas fa-quote-left"></i>
                                @($"{teacher.LastName} {teacher.FirstName}")
                                <hr class="clients-hr">
                                <cite> Averange Mark : @Math.Round(teacher.MarkAvg, 2)</cite>
                            </blockquote>
                        </div>
                    </div>
                </div>
            }

        </div>

    </div>

    <div class="col-12 narrow text-center">
        <p class="lead">Learn more about university</p>
        <a class="btn btn-secondary btn-md" href="http://bit.ly/advanced-bootstrap-course"
           target="_blank">University Rating</a>
    </div>

</div>
