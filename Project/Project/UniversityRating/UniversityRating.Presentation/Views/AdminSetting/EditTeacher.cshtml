@model UniversityRating.Presentation.Models.Teacher.TeacherShowViewModel

@{
    ViewData["Title"] = "Add";
}

@{
    Layout = null;
}
<form asp-controller="AdminSetting" asp-action="EditTeacher" method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label>First Name</label>
        <textarea asp-for="FirstName" class="form-control" rows="2" required></textarea>
    </div>
    <div class="form-group">
        <label>Last Name</label>
        <textarea asp-for="LastName" class="form-control" rows="2" required></textarea>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" rows="2" required/>
    </div>

    <div class="form-group">
        <label class="col-2 col-form-label">Type Teacher</label>
        <div class="col-10">
            <input class="form-control" asp-for="TypeTeacher" required>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
</form>